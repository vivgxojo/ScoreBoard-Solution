@model Jeu

<h2>Confirmation de suppression</h2>

<p>Voulez-vous vraiment supprimer le jeu suivant ?</p>
<ul>
    <li><strong>Nom:</strong> @Model.Nom</li>
    <li><strong>Joueur:</strong> @Model.Joueur?.Prenom @Model.Joueur?.Nom</li>
</ul>

<form asp-action="ConfirmerSuppression" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Confirmer la suppression</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
