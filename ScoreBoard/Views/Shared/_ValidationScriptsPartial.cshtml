@* Validation côté client *@

@* Ajouter des règles JQuery ici *@
<script>
    jQuery.validator.addMethod("datedanslepasse", function (value, element) {
        if (!value) return true;
        var inputDate = new Date(value);
        var today = new Date();

        return inputDate <= today;
    });

    jQuery.validator.unobtrusive.adapters.addBool("datedanslepasse");
</script>